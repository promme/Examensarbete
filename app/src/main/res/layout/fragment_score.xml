<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/babyblue"
    tools:context="se.nackademin.examensarbete.score">

    <TextView
        android:id="@+id/catsResource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cats_resources" />

    <TextView
        android:id="@+id/catsResourceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/catsResource"
        android:layout_toRightOf="@+id/catsResource" />


    <TextView
        android:id="@+id/lumberResource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catsResource"
        android:text="@string/lumber_resources" />

    <TextView
        android:id="@+id/lumberResourceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lumberResource"
        android:layout_toRightOf="@+id/lumberResource" />

    <TextView
        android:id="@+id/stoneResource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lumberResource"
        android:text="@string/stone_resources" />

    <TextView
        android:id="@+id/stoneResourceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/stoneResource"
        android:layout_toRightOf="@+id/stoneResource" />

</RelativeLayout>
