<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.nackademin.examensarbete.presentation.game.GameFragment">

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/clock"
        android:text="clock"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signInButton"
        android:text="SignIn"
        android:layout_alignTop="@+id/achivementButton"
        android:layout_toLeftOf="@+id/achivementButton"
        android:layout_toStartOf="@+id/achivementButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/achivementButton"
        android:text="Achivements"
        android:layout_below="@+id/game_kittenButton"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leaderBoardsButton"
        android:text="Leaderboards"
        android:layout_alignTop="@+id/achivementButton"
        android:layout_toRightOf="@+id/achivementButton"
        android:layout_toEndOf="@+id/achivementButton" />

    <ImageButton
        android:id="@+id/game_kittenButton"
        android:src="@drawable/catbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
